<ul class="user_profile flex flex-col gap-8 py-4 w-[80%] mx-auto">
  <h1 class="user-title text-center font-bold text-5xl my-10 text-indigo-700">Explore the Genzblog Community</h1>  
  <% @users.each do |user| %>
    <a href="<%= user_path(user) %>">
      <li class="profile-card flex flex-row gap-[30px] p-4">
            
        <div class="flex flex-row flex-grow gap-4">
          <%= render partial: 'view_helpers/user_profile', locals: { user: user } %>
        </div>
            
      </li>
    </a>
  <% end %>
</ul>

