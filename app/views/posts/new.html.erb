<section class="page-container grid mx-auto flex-1 py-4 w-[80%]">
  <div class="page-content justify-self-center flex flex-col items-centre gap-2">
    <a href="#" class="back-link">
        <button class="back-btn text-2xl text-lime-950">â¬…</button>
    </a>

    <h1 class="text-2xl text-slate-900">Create a New Post</h1>

    <ul class =" flex gap-2 w-full max-w-xs">
        <%= form_with model: [@user, @post], url: create_user_post_path, local: true, html: { class: 'post-form flex flex-1 flex-col gap-2 bg-[#f8fafc] shadow-md rounded px-8 pt-6 pb-8 mb-4' } do |form| %>
        <li class="field mb-4">
            <%= form.label :title, class: 'fm-label block text-gray-700 text-sm font-bold mb-2' %>
            <%= form.text_field :title, class: 'fm-input outline-none shadow appearance-none border rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-emerald-900' %>
        </li>

        <li class="field">
            <%= form.label :text, class: 'fm-label block text-gray-700 text-sm font-bold mb-2' %>
            <%= form.text_area :text, class: 'fm-textarea bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: "Add post body" %>
        </li>

        <li class="actions grid">
            <%= form.submit 'Add Post', class: 'submit-btn max-w-max justify-self-center shadow bg-cyan-800 hover:bg-cyan-600 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded' %>
        </li>
        <% end %>
    </ul>
  </div>
</section>